{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="content-card">
    <h1 class="page-title">Réinitialisation du mot de passe</h1>

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i>
            {{ flash_error }}
        </div>
    {% endfor %}

    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
    </div>

    {{ form_start(requestForm) }}
        <div class="form-group">
            <label for="{{ requestForm.email.vars.id }}">
                <i class="fas fa-envelope"></i> Adresse e-mail
            </label>
            {{ form_widget(requestForm.email, {'attr': {'placeholder': 'votre@email.com'}}) }}
            {{ form_errors(requestForm.email) }}
        </div>

        <div class="form-actions">
            <button class="btn-submit" type="submit">
                <i class="fas fa-paper-plane"></i> Envoyer le lien de réinitialisation
            </button>
        </div>

        <div style="text-align: center; margin-top: 1rem;">
            <a href="{{ path('app_login') }}" style="color: var(--janus-blue); text-decoration: none; font-size: 0.9rem;">
                <i class="fas fa-arrow-left"></i> Retour à la connexion
            </a>
        </div>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
