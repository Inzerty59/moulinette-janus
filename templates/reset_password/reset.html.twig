{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<div class="content-card">
    <h1 class="page-title">Nouveau mot de passe</h1>

    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Choisissez un nouveau mot de passe sécurisé pour votre compte.
    </div>

    {{ form_start(resetForm) }}
        <div class="form-group">
            <label for="{{ resetForm.plainPassword.first.vars.id }}">
                <i class="fas fa-lock"></i> Nouveau mot de passe
            </label>
            {{ form_widget(resetForm.plainPassword.first, {'attr': {'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
            {{ form_errors(resetForm.plainPassword.first) }}
        </div>

        <div class="form-group">
            <label for="{{ resetForm.plainPassword.second.vars.id }}">
                <i class="fas fa-lock"></i> Confirmer le mot de passe
            </label>
            {{ form_widget(resetForm.plainPassword.second, {'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
            {{ form_errors(resetForm.plainPassword.second) }}
        </div>

        <div class="form-actions">
            <button class="btn-submit" type="submit">
                <i class="fas fa-check"></i> Réinitialiser le mot de passe
            </button>
        </div>
    {{ form_end(resetForm) }}
</div>
{% endblock %}
