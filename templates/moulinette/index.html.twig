{% extends 'base.html.twig' %}

{% block title %}Moulinette Janus{% endblock %}

{% block body %}

<div class="content-card">
    <h1 class="page-title">Moulinette Janus</h1>

    {% if message %}
        <div class="alert alert-{{ message[0] }}">
            <i class="fas fa-{{ message[0] == 'success' ? 'check-circle' : (message[0] == 'danger' ? 'exclamation-circle' : 'info-circle') }}"></i>
            {{ message[1]|raw }}
        </div>
    {% endif %}

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="agency-select">
                <i class="fas fa-building"></i> Veuillez choisir votre agence
            </label>
            <select id="agency-select" name="agency" required>
                <option value="">Choix de l'agence</option>
                {% for agency in agencies %}
                    <option value="{{ agency.id }}">{{ agency.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label>
                <i class="fas fa-file-excel"></i> Sélectionnez le fichier Excel "Cotisation"
            </label>
            <input type="file" name="cotisation_file" accept=".xlsx,.xls,.csv" required>
        </div>

        <div class="form-group">
            <label>
                <i class="fas fa-file-excel"></i> Sélectionnez le fichier Excel "Matricule"
            </label>
            <input type="file" name="matricule_file" accept=".xlsx,.xls,.csv" required>
        </div>

        <div class="form-group">
            <label>
                <i class="fas fa-file-excel"></i> Sélectionnez le fichier Excel "Rubrique"
            </label>
            <input type="file" name="rubrique_file" accept=".xlsx,.xls,.csv" required>
        </div>

        <div class="form-group">
            <label>
                <i class="fas fa-file-excel"></i> Sélectionnez le fichier Excel à écrire
            </label>
            <input type="file" name="output_file" accept=".xlsx,.xls,.csv" required>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="fas fa-rocket"></i> Exécuter
            </button>
        </div>
    </form>
</div>

{% endblock %}
